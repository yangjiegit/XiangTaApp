<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape >
            <corners android:radius="1dip" />
            <gradient
                android:angle="270"
                android:centerColor="#ECECEC"
                android:centerY="0.1"
                android:endColor="#ECECEC"
                android:startColor="#ECECEC" />
        </shape>
    </item>

    <item android:id="@android:id/progress" >
        <clip >
            <shape >
                <corners android:radius="10dip" />
                <gradient
                    android:angle="270"
                    android:centerColor="@color/admin_color"
                    android:centerY="0.45"
                    android:endColor="@color/admin_color"
                    android:startColor="@color/admin_color"
                    />
            </shape>
        </clip>
    </item>
</layer-list>
