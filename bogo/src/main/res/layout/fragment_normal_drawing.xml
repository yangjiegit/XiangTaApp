<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/bg_whitle_dialog"
        android:orientation="vertical"
        android:padding="10dp">


        <TextView
            android:id="@+id/hint_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="当前可提现积分为:  加载中..."
            android:textColor="#646464"
            android:textSize="14dp" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/wealth_invite_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />


        <!-- 下边布局无用，后期可删除-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:text="提现金额"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:visibility="gone" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:visibility="gone">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textSize="13dp" />


            <EditText
                android:id="@+id/edit"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:hint="请输入金额"
                android:inputType="number"
                android:textSize="15dp" />

        </LinearLayout>


    </LinearLayout>


    <TextView
        android:id="@+id/to_drawing"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg_guard_bt"
        android:gravity="center"
        android:text="提现"
        android:textColor="@color/black"
        android:textSize="15dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingTop="30dp"
        android:text="温馨提示"
        android:textColor="#646464"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/hint_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:textColor="#646464"
        android:textSize="14dp" />


    <TextView
        android:id="@+id/his"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:padding="20dp"
        android:text="提现记录"
        android:textColor="@color/admin_color"
        android:textSize="12dp" />


</LinearLayout>