<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_10"
            android:src="@mipmap/img_back_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="青少年模式"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_15" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_title"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_40"
        android:src="@mipmap/img_qsn_title" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_title1"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_toRightOf="@+id/iv_title1"
        android:text="开启青少年模式\n将会获得以下服务"
        android:textColor="@color/black"
        android:textSize="@dimen/dp_18" />

    <LinearLayout
        android:id="@+id/ll_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_title1"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_30"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/img_yuan_kong"
            android:drawablePadding="@dimen/dp_10"
            android:text="针对青少年推送精选优化内容"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:drawableLeft="@mipmap/img_yuan_kong"
            android:drawablePadding="@dimen/dp_10"
            android:text="其他用户将无法通过搜索找到该账号"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:drawableLeft="@mipmap/img_yuan_kong"
            android:drawablePadding="@dimen/dp_10"
            android:text="限制使用充值功能"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:drawableLeft="@mipmap/img_yuan_kong"
            android:drawablePadding="@dimen/dp_10"
            android:text="每天限玩保护"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_15" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_comm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_50"
        android:background="@drawable/bg_jianbian2"
        android:gravity="center"
        android:text="开启青少年模式"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_15" />

</RelativeLayout>