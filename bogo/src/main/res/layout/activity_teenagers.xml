<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/img_qsn_bg"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_50"
        android:text="青少年模式下无法进行其他功能正常使用,\n\n
如果要使用本产品,\n\n
请输入您的密码退出青少年模式操作"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_15" />


    <com.muse.xiangta.ui.view.LastInputEditText
        android:id="@+id/et_pass"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/edit_text_bk_hui_5"
        android:gravity="center_vertical"
        android:hint="请输入密码"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:singleLine="true" />

    <TextView
        android:id="@+id/tv_comm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_30"
        android:background="@drawable/bg_jianbian2"
        android:gravity="center"
        android:text="退出青少年模式"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_15" />


</LinearLayout>