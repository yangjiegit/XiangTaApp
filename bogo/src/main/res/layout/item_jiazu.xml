<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_5"
        android:background="@drawable/bg_whitle_tr5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_70">

            <ImageView
                android:id="@+id/iv_head"
                android:layout_width="@dimen/dp_44"
                android:layout_height="@dimen/dp_44"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/pagemsg_view_isvip"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/pagemsg_view_dian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/bg_green_num" />

                <TextView
                    android:id="@+id/pagemsg_view_isonline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="2dp"
                    android:text="@string/userinfo_bar_isonLine"
                    android:textColor="@color/white"
                    android:textSize="8sp"
                    android:visibility="gone" />
            </LinearLayout>


            <TextView
                android:id="@+id/pagemsg_view_nice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="5dp"
                android:shadowColor="@color/black"
                android:shadowDx="1.0"
                android:shadowDy="1.0"
                android:shadowRadius="2.0"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/bottom_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_head"
                android:background="@color/white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:maxWidth="100dp"
                    android:maxEms="6"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="布谷小美"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_12"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginTop="@dimen/dp_2"
                    android:gravity="center"
                    android:maxWidth="100dp"
                    android:maxEms="6"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="#FFBBBBBB"
                    android:textSize="@dimen/dp_10"
                    android:textStyle="bold"
                    tools:text="25岁.165cm" />


                <com.muse.xiangta.widget.BGLevelTextView
                    android:id="@+id/tv_level"
                    android:layout_width="30dp"
                    android:layout_height="14dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="12dp"
                    android:layout_toRightOf="@+id/pagemsg_view_name"
                    android:textSize="8dp" />


                <TextView
                    android:id="@+id/tv_dashan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@drawable/edit_text_bk_hong_5"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_15"
                    android:paddingBottom="@dimen/dp_5"
                    android:singleLine="true"
                    android:text="加入"
                    android:textColor="#ffF56E75"
                    android:textSize="@dimen/dp_10" />


                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_number"
                    android:layout_marginTop="@dimen/dp_2"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/tv_dashan"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="暂无签名字段"
                    android:textColor="#ffBBBBBB"
                    android:textSize="@dimen/dp_10" />


            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>