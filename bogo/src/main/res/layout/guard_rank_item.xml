<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:layout_width="match_parent" android:layout_height="80dp">


    <View
        android:background="@drawable/bg_guard_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        />



    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_user_home_rank"
        android:id="@+id/guard_icon"
        android:layout_centerVertical="true"
        />


    <LinearLayout
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/guard_icon"
        android:layout_width="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/guard_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Simple"
            android:textColor="@color/white"
            />




        <TextView
            android:id="@+id/guard_gxz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="贡献值"
            android:textColor="#FFCE1B"
            />



    </LinearLayout>

    
    <RelativeLayout
        android:layout_width="29dp"
        android:layout_marginRight="13dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/guard_start"
        android:layout_height="39dp">

        <TextView
            android:id="@+id/guard_start"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="29dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:text="10"
            android:layout_alignParentTop="true"
            android:layout_height="27dp" />


    </RelativeLayout>
    
    

    
</RelativeLayout>