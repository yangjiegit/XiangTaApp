<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/who_like_me_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/im_left_menu_avatar"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_toRightOf="@+id/im_left_menu_avatar"
            android:orientation="vertical">

            <TextView
                android:id="@+id/right_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="查看谁喜欢了我"
                android:textColor="#323232" />

            <TextView
                android:id="@+id/right_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#747474"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_item_last_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="TA 喜欢了我？右滑立即配对！"
                android:textColor="#747474" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/im_left_menu_avatar"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:background="#f5f5f5" />
    </RelativeLayout>


</RelativeLayout>