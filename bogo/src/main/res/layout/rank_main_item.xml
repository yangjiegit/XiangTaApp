<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingRight="10dp">


        <TextView
            android:id="@+id/num"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="10"
            android:textColor="@color/black"
            android:textSize="15dp" />


        <RelativeLayout
            android:id="@+id/left"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/num">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_user_home_rank" />

            <ImageView
                android:id="@+id/online_state"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="5dp"
                android:src="@mipmap/on_line" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/left"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="Simple"
                android:textColor="#323232"
                android:textSize="15dp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/vip_man"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@mipmap/man_vip_bac"
                    android:gravity="center"
                    android:paddingBottom="2dp"
                    android:text="10"
                    android:textColor="@color/black"
                    android:textSize="8dp" />

                <TextView
                    android:id="@+id/vip_woman"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@mipmap/woman_vip_bac"
                    android:gravity="center"
                    android:paddingTop="3dp"
                    android:text="10"
                    android:textColor="@color/white"
                    android:textSize="8dp"
                    android:visibility="gone" />


                <View
                    android:layout_width="12dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="18dp"
                    android:background="@mipmap/address" />


                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="泰山"
                    android:textColor="#646464"
                    android:textSize="11dp" />


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/coin_image" />


            <TextView
                android:id="@+id/coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="10000"
                android:textColor="#FFCE1B"
                android:textSize="14dp" />


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#E1E1E1" />
    </RelativeLayout>

</RelativeLayout>